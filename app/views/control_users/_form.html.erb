  <div class="form-inputs">

    <% if current_user.admin? %>
      <%= f.hidden_field :father, value: current_user.id %>
    <% else %>
      <%= f.hidden_field :father, value: current_user.father.id %>
    <% end %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
    <%= f.input :role, collection: ["standard", "admin"], include_blank: false %>
    <%= f.association :company, label_method: :description, selected: current_user.company_id, value: current_user.company_id, value_method: :id, disabled: true %>
  </div>

  <hr />
  <h3>Choose groups</h3>

  <%= f.collection_radio_buttons :group_id, Group.all, :id, :description %>

  <hr />

  <div class="form-actions">
    <%= f.button :submit %>
  </div>