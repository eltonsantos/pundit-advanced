  <div class="form-inputs">
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
    <%= f.input :role, collection: ["standard", "admin"], include_blank: false %>
  </div>

  <hr />
  <h3>Choose groups</h3>

  <%= f.collection_radio_buttons :group_id, Group.all, :id, :description %>

  <hr />

  <div class="form-actions">
    <%= f.button :submit %>
  </div>