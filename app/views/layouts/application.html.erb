<!DOCTYPE html>
<html>
<head>
  <title>PunditAdvanced</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="navbar navbar-inverse">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/">Pundit Advanced</a>
      </div>
      <div id="navbar" class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          <li class="active"><%= link_to 'Home', root_path %></li>
          <li><%= link_to("Functionalities", functionalities_path) %></li>
          <li><%= link_to("Groups", groups_path) %></li>
          <li><%= link_to("Companies", companies_path) %></li>
          <li><%= link_to("Products", products_path) %></li>
          <li><%= link_to("Users", control_users_path) %></li>
        </ul>
        <ul class="nav navbar-nav pull-right">
          <% if user_signed_in? %>
            <li><%= link_to(current_user.email, "#") %></li>
            <li><%= link_to("Add user", add_user_control_users_path) %></li>
            <li><%= link_to("Log out", destroy_user_session_path, :method => :delete) %></li>
          <% else %>
            <li><%= link_to("Log in", new_user_session_path) %></li>
            <li><%= link_to("Sign up", new_user_registration_path) %></li>
          <% end %>
        </ul>
      </div><!--/.nav-collapse -->

    </div>
  </nav>

  <div class="container">
    <%= notice_message %>
    <%= yield %>
  </div>

</body>
</html>
